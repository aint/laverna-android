<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_choose_tags_dialog_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/dialog_fragment_choose_tags"
        android:textColor="@color/main_green_themes_app"
        android:textSize="24sp"/>

    <View
        android:id="@+id/view_separator_dialog_fragment"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/tv_choose_tags_dialog_fragment"
        android:background="@color/main_green_themes_app"/>

    <EditText
        android:id="@+id/edit_text_tags_dialog_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator_dialog_fragment"
        android:layout_margin="16dp"
        android:hint="@string/dialog_fragment_add_tag_hint"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_all_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@+id/edit_text_tags_dialog_fragment"
        android:layout_above="@+id/button_containers_fragment_dialog"/>

    <LinearLayout
        android:id="@+id/button_containers_fragment_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_dialog_button_background"
            android:text="@string/dialog_fragment_cancel_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_dialog_button_background"
            android:text="@string/dialog_fragment_ok_button"/>

    </LinearLayout>

</RelativeLayout>