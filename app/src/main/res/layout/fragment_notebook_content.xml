<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_edit_text_title_note"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/drawer_main_menu_notebooks"
            android:textColor="@color/main_green_themes_app"
            android:textColorHint="@color/main_green_themes_app"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_notebooks"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:clipToPadding="false"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_edit_text_title_note"
            android:elevation="2dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/drawer_main_menu_all_notes"
            android:textColor="@color/main_green_themes_app"
            android:textColorHint="@color/main_green_themes_app"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_notes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:clipToPadding="false"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>